{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
